

@{
    ViewBag.Title = "ProgressChart";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* Header styles */
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #ffff;
            color: rgb(0, 0, 0);
            padding: 10px 20px;
            border-bottom: 1px solid #dcdcdc;
            font-size: 14px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 2000; /* Tăng z-index để đảm bảo header nổi trên các phần tử khác */
        }

        .logo {
            font-size: 20px;
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        .navbar {
            display: flex;
        }

            .navbar a {
                color: black !important;
                text-decoration: none;
                font-size: 14px;
                display: inline-flex;
                align-items: center;
                padding: 8px 8px;
                border-radius: 4px;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .navbar a:hover {
                    background-color: #f0f0f0;
                    color: #000000;
                    text-decoration: none;
                }

        .header-right {
            display: flex;
            align-items: center;
        }

        .search-input {
            padding: 5px;
            border: 1px solid #dcdcdc;
            border-radius: 4px;
            margin-right: 10px;
        }

        .add-button {
            background-color: #0056a3;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 12px;
            cursor: pointer;
            font-size: 14px;
            margin-right: 10px;
        }

            .add-button:hover {
                background-color: #004a8d;
            }

            .add-button a {
                color: white; /* Đặt màu chữ trắng */
                text-decoration: none; /* Bỏ gạch chân */
            }

                .add-button a:hover {
                    color: white; /* Đảm bảo màu chữ vẫn là trắng khi hover */
                    text-decoration: none; /* Bỏ gạch chân khi hover */
                }

        .icons {
            display: flex;
            align-items: center;
        }

        .icon {
            margin: 0 5px;
            font-size: 18px;
            cursor: pointer;
        }

            .icon.user-icon {
                background-color: orange;
                border-radius: 50%;
                padding: 4px;
                color: white;
                font-size: 16px;
            }

        /* Background styles */
        body {
            /* background-image: url('/IMG/martin-masson-8FBr3z73Ymw-unsplash.jpg');*/
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
        }

        /* Menu styles */
        /* Updated Menu Styles */
        .menu {
            display: flex;
            flex-direction: column;
            align-items: flex-start; /* Canh trái nội dung */
            justify-content: flex-start; /* Đặt nội dung từ trên xuống */
            width: 280px; /* Đồng nhất với container */
            position: fixed;
            top: 0;
            left: 0;
            background-color: #2e3a45; /* Màu nền tối giống container */
            color: white;
            padding: 80px 20px 20px; /* Đặt khoảng cách với header */
            height: 100vh;
            overflow-y: auto; /* Cho phép cuộn menu khi nội dung vượt quá */
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng */
            z-index: 1000; /* Nằm dưới header */
            border-right: 1px solid #dcdcdc; /* Đường phân cách nhẹ với nội dung chính */
            transition: all 0.3s ease-in-out;
        }

            .menu:hover {
                background-color: #35495e; /* Hiệu ứng hover mượt */
            }

            .menu ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
                width: 100%; /* Đảm bảo danh sách chiếm hết chiều rộng menu */
            }

            .menu li {
                display: flex;
                align-items: center;
                justify-content: flex-start; /* Nội dung căn trái */
                padding: 10px 15px;
                margin: 10px 0;
                background-color: rgba(255, 255, 255, 0.1); /* Màu nền nhẹ */
                border-radius: 8px; /* Bo góc các mục */
                transition: all 0.3s ease-in-out;
            }

                .menu li a {
                    text-decoration: none;
                    color: white;
                    font-size: 14px;
                    font-weight: 500;
                    transition: color 0.3s ease-in-out;
                }

                .menu li:hover {
                    background-color: rgba(255, 255, 255, 0.2); /* Hiệu ứng hover */
                    transform: scale(1.05); /* Phóng to nhẹ */
                }

                .menu li a:hover {
                    color: #00aabb; /* Màu xanh nhấn khi hover */
                }


        .add {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 40px;
            margin: 20px 0 0; /* Cách các mục phía trên */
            background-color: #0056a3; /* Nút màu xanh đậm */
            color: white;
            border-radius: 8px; /* Bo góc nút */
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

            .add:hover {
                background-color: #004a8d; /* Đậm hơn khi hover */
            }

        /* Main content */
        .main-content {
            margin-left: 25%; /* Để không bị menu che */
            padding: 100px 16px 16px; /* Điều chỉnh để không bị header che */
            position: relative;
            z-index: 1;
        }

        .header h1 {
            margin: 0;
        }

        /* Background Styles */
        .background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(120deg, #174757, #00aabb, #7f8c8d);
            background-size: cover;
            z-index: -1;
        }

        .title_box {
            font-size: 20px; /* Tăng cỡ chữ */
            font-weight: bold; /* In đậm chữ */
            margin-bottom: 20px; /* Khoảng cách dưới */
        }

        .content {
            margin-left: 280px; /* Đặt bằng chiều rộng của menu */
            padding: 100px 16px 16px; /* Khoảng cách để không bị header che */
            position: relative;
            z-index: 1;
        }


        .column {
            width: 30%; /* Kích thước ban đầu */
            padding: 10px;
            border: solid 1px;
            height: 500px;
            margin: 2px;
            float: left; /* Giữ nguyên nếu muốn các cột nằm sát nhau */
            border-radius: 30px;
        }

            .column a {
                color: blue; /* Màu chữ đỏ cho liên kết */
                text-decoration: none; /* Loại bỏ gạch dưới */
            }

        .item-column {
            width: 100%;
            background-color: greenyellow;
            border-radius: 20px;
            border: 1px solid;
            margin: 10px 0;
            font-size: 20px;
            padding: 5px;
        }

        .add {
            width: 50px;
            height: 30px;
            border-radius: 5px;
            background-color: blue;
            text-align: center;
            color: white;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="logo">Trello</div>
        <nav class="navbar">
            <a href="#">Các Không gian làm việc ▼</a>
            <a href="#">Gần đây ▼</a>
            <a href="#">Đã đánh dấu sao ▼</a>
            <a href="#">Mẫu ▼</a>
        </nav>
        <div class="header-right">
            <input type="text" placeholder="Tìm kiếm" class="search-input">
            @{
                webBinh.Models.Project x = null;
            }
            <button class="add-button">

                @Html.ActionLink("Tạo mới", "createProject", new { project = x })
            </button>
            <div class="icons">
                <span class="icon search-icon">🔍</span>
                <span class="icon bell-icon">🔔</span>
                <span class="icon user-icon">🟠</span>
            </div>
        </div>
    </header>
    <!-- Container Left (Menu) -->
    <div class="menu">
        <div class="title_box">Project của tôi</div>

    </div>
    <div class="content">
        <h2>Biểu đồ tiến độ</h2>
        <!-- Canvas cho Chart.js -->
        <canvas id="progressChart" width="400" height="200"></canvas>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
     // Dữ liệu từ ViewBag
     var totalTask = @ViewBag.TotalTasks;
     var hoanThanhs = @ViewBag.HoanThanh;
     var dangThucHiens = @ViewBag.DangThucHien;
     var chuaBatDaus = @ViewBag.ChuaBatDau;
     var quaHans = @ViewBag.QuaHan;

            const ctx = document.getElementById('progressChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [
                        "Tổng số thẻ",
                        "Hoàn tất",
                        "Đang thực hiện",
                        "Chưa bắt đầu",
                        "Quá hạn"
                    ],
                    datasets: [{
                        label: 'Số lượng',
                        data: [
                            totalTask,
                            hoanThanhs,
                            dangThucHiens,
                            chuaBatDaus,
                            quaHans
                        ],
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 99, 132, 0.2)'
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 99, 132, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    return `${context.raw} thẻ`; // Hiển thị thông tin tooltip
                                }
                            }
                        }
                    }
                }
            });

        </script>
    </div>
</body>
