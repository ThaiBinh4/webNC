@model IEnumerable<webBinh.Models.Project>
@{
    ViewBag.Title = "Trello Clone";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* Header styles */
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #ffff;
            color: rgb(0, 0, 0);
            padding: 10px 20px;
            border-bottom: 1px solid #dcdcdc;
            font-size: 14px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 2000; /* Tăng z-index để đảm bảo header nổi trên các phần tử khác */
        }

        .logo {
            font-size: 20px;
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        .navbar {
            display: flex;
        }

            .navbar a {
                color: black !important;
                text-decoration: none;
                font-size: 14px;
                display: inline-flex;
                align-items: center;
                padding: 8px 8px;
                border-radius: 4px;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .navbar a:hover {
                    background-color: #f0f0f0;
                    color: #000000;
                    text-decoration: none;
                }

        .header-right {
            display: flex;
            align-items: center;
        }

        .search-input {
            padding: 5px;
            border: 1px solid #dcdcdc;
            border-radius: 4px;
            margin-right: 10px;
        }

        .add-button {
            background-color: #0056a3;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 12px;
            cursor: pointer;
            font-size: 14px;
            margin-right: 10px;
        }

            .add-button:hover {
                background-color: #004a8d;
            }

            .add-button a {
                color: white; /* Đặt màu chữ trắng */
                text-decoration: none; /* Bỏ gạch chân */
            }

                .add-button a:hover {
                    color: white; /* Đảm bảo màu chữ vẫn là trắng khi hover */
                    text-decoration: none; /* Bỏ gạch chân khi hover */
                }

        .icons {
            display: flex;
            align-items: center;
        }

        .icon {
            margin: 0 5px;
            font-size: 18px;
            cursor: pointer;
        }

            .icon.user-icon {
                background-color: orange;
                border-radius: 50%;
                padding: 4px;
                color: white;
                font-size: 16px;
            }

        /* Background styles */
        body {
            background-image: url('/IMG/martin-masson-8FBr3z73Ymw-unsplash.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
        }

       /* Menu styles */
    .menu {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
        width: 250px;
        position: fixed;
        top: 60px; /* Adjusted to make room for the header */
        left: 0;
        background-color: #2e3a45;
        color: white;
        padding: 20px;
        height: calc(100vh - 60px);
        overflow-y: auto;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }

    .menu:hover {
        background-color: #35495e;
    }

    .menu ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
        width: 100%;
    }

    .menu li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 10px;
        margin-bottom: 10px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
    }

    .menu li:hover {
        background-color: rgba(255, 255, 255, 0.2);
        transform: scale(1.05);
    }

    .menu li a {
        color: white;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: color 0.3s;
    }

    .menu li a:hover {
        color: #00aabb;
    }

    .menu .add {
        background-color: #0056a3;
        color: white;
        border-radius: 8px;
        padding: 10px;
        text-align: center;
        margin-top: 20px;
        cursor: pointer;
        transition: background-color 0.3s;
        font-weight: bold;
    }

    .menu .add:hover {
        background-color: #004a8d;
    }


        .add {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 40px;
            margin: 20px 0 0; /* Cách các mục phía trên */
            background-color: #0056a3; /* Nút màu xanh đậm */
            color: white;
            border-radius: 8px; /* Bo góc nút */
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

            .add:hover {
                background-color: #004a8d; /* Đậm hơn khi hover */
            }

        /* Main content */
        .main-content {
            margin-left: 25%; /* Để không bị menu che */
            padding: 100px 16px 16px; /* Điều chỉnh để không bị header che */
            position: relative;
            z-index: 1;
        }

        .header h1 {
            margin: 0;
        }

        /* Background Styles */
        .background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(120deg, #174757, #00aabb, #7f8c8d);
            background-size: cover;
            z-index: -1;
        }

        .title_box {
            font-size: 20px; /* Tăng cỡ chữ */
            font-weight: bold; /* In đậm chữ */
            margin-bottom: 20px; /* Khoảng cách dưới */
        }

        .icons img {
            width: 50px; /* Chiều rộng cố định */
            height: 50px; /* Chiều cao cố định, giống width */
            border-radius: 50%; /* Tạo hình tròn */
            object-fit: cover; /* Cắt ảnh vừa khít */
            border: 2px solid #ffffff; /* (Tuỳ chọn) Thêm viền */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); /* (Tuỳ chọn) Hiệu ứng đổ bóng */
        }

    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="logo">Trello</div>
        <nav class="navbar">
            <a href="#">Các Không gian làm việc ▼</a>
            <a href="#">Gần đây ▼</a>
            <a href="#">Đã đánh dấu sao ▼</a>
            <a href="#">Mẫu ▼</a>
            <a href="@Url.Action("GetTaskByProject", new { idProject = ViewBag.id })">
                <div>
                    <span>🔥</span> <!-- Biểu tượng hoặc nội dung khác -->
                    <span>Danh sách task</span>
                </div>
            </a>
            <a href="@Url.Action("GetProjectProgress", new { idProject = ViewBag.id })">
                <div>
                    <span>🔥</span> <!-- Biểu tượng hoặc nội dung khác -->
                    <span>Biểu đồ thống kê</span>
                </div>
            </a>
        </nav>
        <div class="header-right">
            <input type="text" placeholder="Tìm kiếm" class="search-input">
            @{
                webBinh.Models.Project x = null;
            }
            <button class="add-button">

                @Html.ActionLink("Tạo mới", "createProject", new { project = x })
            </button>
            <div class="icons">
                <span class="icon search-icon">🔍</span>
                <span class="icon bell-icon">🔔</span>
                <img src="@Url.Content("~/IMG/" + ViewBag.avatar)" alt="Ảnh đại diện" "  />
            </div>
        </div>
    </header>

    <!-- Container Left (Menu) -->
    <div class="menu">
        <div class="title_box">Project của tôi</div>
        <ul class="left_menu">

            @{

            }
            @foreach (var item in Model)
            {
                var loginCookie = Request.Cookies["LoginCookie"];
                <li style="display: flex; justify-content: space-between; align-items: center;">
                    <span>@Html.ActionLink(item.title, "column", new { id_project = item.id_project, sdt = loginCookie.Value })</span>
                    <span>
                        @Html.ActionLink("Sửa", "editProject", new { id = item.id_project }, new { style = "color: blue; text-decoration: none;" })
                    </span>
                </li>
            }
        </ul>

    </div>

</body>
</html>
